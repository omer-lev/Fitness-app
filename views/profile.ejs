<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Fitness App</title>

    <link rel="stylesheet" href="/styles/profile.css">

    <%- include('partials/includes.ejs') %>
</head>
<body>
    <%- include('partials/header.ejs') %>

    <div class="profile">            
            <div class="profile-card">
                <h1>FITNESS APP</h1>

                <div class="section">
                    <div class="field">
                        <h4>username:</h4>
                    </div>
        
                    <div class="field">
                        <input type="text" value="<%= user.username %>" id="valid" disabled />
                    </div>
                </div>
        
                <div class="section">
                    <div class="field">
                        <h4>height (cm):</h4>
                    </div>
        
                    <div class="field">
                        <input type="number" value="<%= user.height %>" id="valid" disabled />
                    </div>
                </div>
        
                <div class="section">
                    <div class="field">
                        <h4>weight (kg):</h4>
                    </div>
        
                    <div class="field">
                        <input type="number" value="<%= user.weight %>" id="valid" disabled />
                    </div>
                </div>
        
                <div class="section">
                    <div class="field">
                        <h4>BMI:</h4>
                    </div>
        
                    <div class="field">
                        <input type="number" value="<%= user.BMI %>" id="valid" disabled />
                    </div>
                </div>
        
                <div class="section">
                    <div class="field">
                        <h4>current workout:</h4>
                    </div>
        
                    <div class="field">
                        <input type="text" value="<%= user.currentWorkout.toUpperCase().replace(/_OR_/g, '/') %>" id="valid" disabled />
                    </div>
                </div>
        
                <div class="section" id="button-section">
                    <div class="field">
                        <button onclick="window.location.href = '/workouts/<%= user.currentWorkout %>'">workout</button>
                    </div>
        
                    <div class="field">
                        <button onclick="window.location.href = '/nutrition'">nutrition menu</button>
                    </div>
                </div>

                <div class="section" id="contact-trainer">
                    <h3>Contact one of our trainers</h3>
                </div>

                <form class="section">
                    <input type="text" placeholder="Send message to trainer..." required />
                    <button type="submit">send</button>
                </form>

                <div class="section" id="message-confirmation">
                    <p>message sent√ó</p>
                </div>
            </div>
    </div>

    <script src="/scripts/message_trainer.js"></script>
</body>
</html>